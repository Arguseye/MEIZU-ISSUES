<div class="modal user-info" id="container-modal">
  <div class="modal-body">
    <div class="row-fluid">
      <div class="span5">
        <%= image_tag @user.avatar_url(:medium), :class => "img-rounded" %>
      </div>
      <div class="span19">
        <p class="name"><%= @user.name %></p>
        <p><%= @user.mail %></p>
        <div>
          <%= link_to l(:label_invite), new_member_invitation_path(user_id: @user.id), remote: true, class: 'button blue' %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= link_to l(:button_close), '#', class: 'btn', data: { dismiss: 'modal' } %>
  </div>
</div>
